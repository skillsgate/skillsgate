{
	"compilerOptions": {
		"target": "es2022",
		"lib": ["dom", "dom.iterable", "es2022"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "react-jsx",
		"paths": { "~/*": ["./src/*"] },
		"types": ["./cloudflare-env.d.ts", "vite/client"]
	},
	"include": ["**/*.ts", "**/*.tsx"],
	"exclude": ["node_modules", "build"]
}
